<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Content area (scrollable) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp"
        android:background="#E6E6FA">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Tree Animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/treeAnimation"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/tree_growth"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:contentDescription="Tree growth progress animation" />

            <!-- Module Buttons -->
            <Button
                android:id="@+id/btnCulture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Culture"
                android:backgroundTint="#4B0082"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:contentDescription="Learn about local culture" />

            <Button
                android:id="@+id/btnCurrency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:backgroundTint="#4B0082"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:contentDescription="Learn about currency" />

            <Button
                android:id="@+id/btnEmergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:backgroundTint="#4B0082"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:contentDescription="View emergency information" />

            <Button
                android:id="@+id/btnTravel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel Requirements"
                android:backgroundTint="#4B0082"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:contentDescription="View travel requirement details" />

            <Button
                android:id="@+id/btnGreetings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Greetings"
                android:backgroundTint="#4B0082"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:contentDescription="Learn common greetings" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation handled via BaseActivity -->
    <include layout="@layout/bottom_nav" />

</LinearLayout>
